{
  "name": "ezaccounting-desktop",
  "version": "1.0.0",
  "description": "EZAccounting Desktop Application",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "xcopy src\\renderer dist\\renderer /E /I /Y",
    "start": "npm run build && electron dist/main.js",
    "start:dev": "npm run build && electron dist/main.js --dev",
    "dev": "ts-node src/main.ts",
    "pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "electron": "^27.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.ezaccounting.desktop",
    "productName": "EZAccounting",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": ["accounting", "desktop", "electron"],
  "author": "",
  "license": "ISC"
}
