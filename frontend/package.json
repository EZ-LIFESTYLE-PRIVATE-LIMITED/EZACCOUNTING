{
  "name": "ezaccounting-desktop",
  "version": "1.0.0",
  "description": "EZAccounting Desktop Application",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build": "tsc && npm run copy-files-win",
    "copy-files": "cp -r src/renderer dist/",
    "copy-files-win": "xcopy src\\renderer dist\\renderer /E /I /Y",
    "start": "npm run build && electron dist/main.js",
    "start:dev": "npm run build && electron dist/main.js --dev",
    "dev": "ts-node src/main.ts",
    "pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.ezaccounting.desktop",
    "productName": "EZAccounting",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "forceCodeSigning": false,
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "dir"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "accounting",
    "desktop",
    "electron"
  ],
  "author": "",
  "license": "ISC"
}
